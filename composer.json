{
  "name": "haryadi/haryadi",
  "description": "Haryadi Framework - a MVC micro-framework",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Deni Agus Haryadi",
      "email": "deni@example.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "vlucas/phpdotenv": "^5.5",
    "symfony/var-dumper": "^6.3"
  },
  "autoload": {
    "psr-4": {
      "Haryadi\\": "src/Haryadi/",
      "App\\": "app/"
    }
  },
  "bin": [
    "bin/haryadi"
  ],
  "scripts": {
    "post-create-project-cmd": [
      "if [ ! -f .env ]; then cp .env.example .env; fi",
      "echo 'Haryadi project created successfully!'"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/Captzuzo/haryadi"
    }
  ]
}
